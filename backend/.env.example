# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/yoursupermarket?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Application
PORT=3000
NODE_ENV=development
TAX_RATE=0.14

# Prisma Logging (optional)
# Options: query, info, warn, error (default: warn in dev, error in prod)
# PRISMA_LOG_LEVEL=warn
# Set to 'true' to enable detailed query logging (only if PRISMA_LOG_LEVEL includes 'query')
# PRISMA_LOG_QUERIES=false

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Paymob
PAYMOB_API_KEY=your-paymob-api-key
PAYMOB_INTEGRATION_ID=your-paymob-integration-id
PAYMOB_HMAC_SECRET=your-paymob-hmac-secret

# Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@yoursupermarket.com

# CORS
FRONTEND_URL=http://localhost:3001

